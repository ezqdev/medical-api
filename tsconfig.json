{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "App/*": ["./app/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "build"]
}
